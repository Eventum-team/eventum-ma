<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:orientation="vertical">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/home_event_image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/event_background"
        android:scaleType="centerCrop"
        app:riv_corner_radius="3dip"
        app:riv_oval="false" />
    <TextView
        android:id="@+id/home_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Product UX Design"
        android:layout_marginTop="3dp"
        android:textColor="#585e66"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/home_event_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$59.99"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryDark"/>


    </LinearLayout>
</LinearLayout>
