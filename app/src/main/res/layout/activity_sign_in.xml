<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.ui.activities.SignInActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20sp"
    android:background="@color/white"
    tools:ignore="UseCompoundDrawables">
    <TextView
        android:id="@+id/tvDetailConferenceSpeaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eventum"
        android:layout_marginVertical="100sp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:layout_margin="5dp"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/ivItemSpeakerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10sp"
        android:adjustViewBounds="true"
        android:src="@drawable/signin_image"
        tools:ignore="MissingConstraints"
        android:contentDescription="Login Image" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30sp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo"
            android:textStyle="bold"
            app:startIconDrawable="@drawable/ic_mail_icon"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signInEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:hint="ContraseÃ±a"
            app:startIconDrawable="@drawable/ic_password_icon"
            app:endIconMode="password_toggle"
            android:textStyle="bold"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signInPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_marginVertical="20sp"
            android:paddingHorizontal="40sp"
            android:paddingVertical="10sp"
            android:id="@+id/signInButton"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        />
        <Button
            android:id="@+id/signUpButton"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            />
    </LinearLayout>
</LinearLayout>