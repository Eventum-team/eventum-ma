<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="5dp"
    android:layout_margin="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >
        <!--
        Adiciona el atributo ID a cada elemento
        -->
        <ImageView
            android:id="@+id/ivItemSpeakerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:adjustViewBounds="true"
            android:src="@drawable/event_background" />
        <!--            android:src="@mipmap/ic_launcher"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"

        android:paddingRight="20dp"
>
        <TextView
            android:id="@+id/tvItemSpeakerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Evento"
            android:textStyle="bold"
            android:gravity="left"
            android:textSize="@dimen/tamanioTitulo"
            android:textColor="@color/colorPrimaryDark"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:id="@+id/tvItemSpeakerWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trabajo Expositor"
            android:textSize="@dimen/tamanioSubtitulo"
            android:textColor="@color/colorPrimary"
            android:gravity="left"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>